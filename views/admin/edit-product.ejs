<%- include('../partials/admin-header') %>

    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.css">
    </head>

    <section class="content-main">
        <div class="row">
            <div class="col-6">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                    <!-- <div>
                        <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button>
                        <button class="btn btn-md rounded font-sm hover-up">Publich</button>
                    </div> -->
                </div>
            </div>
        </div>
        <div class="row">
            <form action="/admin/edit-product" method="post">
                <div class="col-lg-12">
                    <input type="text" name="id" value="<%= product._id %>" id="" class="d-none">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>1. General info</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Product title</label>
                                        <input type="text" placeholder="Type here" class="form-control" name="name"
                                            id="name" value="<%= product.name %>">
                                        <div id="name-error" class="invalid-feedback"></div>
                                    </div>
                                    <div class="mb-4 row">
                                        <div class="col-lg-4">
                                            <label class="form-label">Brand</label>
                                            <select class="form-select" name="brand" id="brand">
                                                <!-- <option value="Iphone">Iphone</option> -->
                                                <option value=""></option>
                                                <% brand.forEach(brand=> { %>
                                                    <% if (product.brand==brand.name) { %>

                                                        <option value="<%= brand.name %>" selected>
                                                            <%= brand.name %>
                                                                <% } else {%>
                                                        <option value="<%= brand.name %>">
                                                            <%= brand.name %>
                                                        </option>
                                                        <% } }) %>
                                            </select>
                                            <div id="brand-error" class="invalid-feedback"></div>
                                        </div>
                                    </div>



                                    <div class="mb-4 row">
                                        <div class="col-lg-4">
                                            <label class="form-label">Category</label>
                                            <select class="form-select" name="category" id="category">
                                                <!-- <option value="Iphone">Iphone</option> -->
                                                <option value=""></option>
                                                <% categories.forEach(c=> { %>
                                                    <% if (product.category==c.name) { %>

                                                        <option value="<%= c.name %>" selected>
                                                            <%= c.name %>
                                                                <% } else {%>
                                                        <option value="<%= c.name %>">
                                                            <%= c.name %>
                                                        </option>
                                                        <% } }) %>
                                            </select>
                                            <div id="category-error" class="invalid-feedback"></div>
                                        </div>
                                    </div>
                                    <div class="mb-4 row">
                                        <div class="col-lg-4">
                                            <label class="form-label">RAM</label>
                                            <select class="form-select" name="ram" id="ram">
                                                <option value=""></option>

                                                <option value="1" <%=product.ram==1 ? 'selected' : '' %> >1 GB</option>
                                                <option value="2" <%=product.ram==2 ? 'selected' : '' %> >2 GB</option>
                                                <option value="3" <%=product.ram==3 ? 'selected' : '' %> >3 GB</option>
                                                <option value="4" <%=product.ram==4 ? 'selected' : '' %> >4 GB</option>
                                                <option value="6" <%=product.ram==6 ? 'selected' : '' %> >6 GB</option>
                                                <option value="8" <%=product.ram==8 ? 'selected' : '' %> >8 GB</option>
                                                <option value="12" <%=product.ram==12 ? 'selected' : '' %> >12 GB
                                                </option>

                                            </select>
                                            <div id="ram-error" class="invalid-feedback"></div>
                                        </div>
                                    </div>
                                    <div class="mb-4 row">
                                        <div class="col-lg-4">
                                            <label class="form-label">Storage</label>
                                            <select class="form-select" name="storage" id="storage">
                                                <option value=""></option>
                                                <option value="16" <%=product.storage==16 ? 'selected' : '' %> >16 GB
                                                </option>
                                                <option value="32" <%=product.storage==32 ? 'selected' : '' %> >32 GB
                                                </option>
                                                <option value="64" <%=product.storage==64 ? 'selected' : '' %> >64 GB
                                                </option>
                                                <option value="128" <%=product.storage==128 ? 'selected' : '' %> >128 GB
                                                </option>
                                                <option value="256" <%=product.storage==256 ? 'selected' : '' %> >256 GB
                                                </option>
                                                <option value="512" <%=product.storage==512 ? 'selected' : '' %> >512 GB
                                                </option>

                                            </select>
                                            <div id="storage-error" class="invalid-feedback"></div>
                                        </div>
                                    </div>
                                    <div class="mb-4 row">
                                        <div class="col-lg-4">
                                            <label class="form-label">Color</label>
                                            <input placeholder="" type="text" class="form-control" name="color"
                                                value="<%= product.color %>" id="color">
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea placeholder="Type here" class="form-control" rows="4"
                                            name="description" id="description"><%= product.description %></textarea>
                                        <div id="description-error" class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>2. Pricing</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Regular price</label>
                                        <input type="text" placeholder="&#8377;00.0" class="form-control"
                                            value="<%= product.regularPrice %>" name="regularPrice" id="regularPrice">
                                        <div id="regularPrice-error" class="invalid-feedback"></div>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Promotional price</label>
                                        <input type="text" placeholder="&#8377;00.0" class="form-control"
                                            value="<%= product.promotionalPrice %>" name="promotionalPrice"
                                            id="promotionalPrice">
                                        <div id="promotionalPrice-error" class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>


                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>4. Quantity</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Qunatity</label>
                                        <input type="text" placeholder="" class="form-control" name="quantity"
                                            id="quantity" value="<%= product.quantity %>">
                                        <div id="qunatity-error" class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>4. Media</h6>
                                </div>
                                <div class="col-md-9">

                                    <% for( let i=0; i < product.image.length; i++ ) { %>
                                        <div class="row">
                                            <div class="card-body align-items-center" style="margin-bottom: 20px;">
                                                <img src="/product-images/<%= product.image[i] %>" alt="" id="imgView1">
                                                <input class="form-control" type="file" name="images" id="input1"
                                                    accept="image/png, image/jpeg, image/jpg"
                                                    onchange="viewImage1(event), viewImage(event, 1)">
                                                data-filename="<%= product.image[i] %>">
                                                    <button class="delete-icon"
                                                        onclick="deleteImage('<%= product._id %>', '<%= product.image[i] %>')">‚ùå</button>
                                            </div>
                                            <div class="image-cropper d-flex align-items-center"
                                                style="display:none; width: 300px; height: 200px; margin-bottom: 20px;">
                                                <img src="" id="croppedImg1" alt="" style="width: 10rem; height: auto;">
                                                <button type="button" id="saveButton1"
                                                    class="btn-sm btn-primary">Save</button>
                                            </div>
                                        </div>
                                        <% } %>

                                            <div id="image-error" class="invalid-feedback"></div>
                                </div>









                            </div>
                            <hr class="mb-4 mt-0">

                            <div class="row">
                                <div class="col text-center">
                                    <button type="submit" class="btn btn-sm btn-primary">Publish</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>
        </div>
    </section>

    <%- include('../partials/admin-footer') %>
        <script>
            function handleImageChange() {
                const imageInput = document.getElementById('image');
                const form = document.getElementById('myForm');

                if (imageInput.files.length > 0) {
                    form.setAttribute('enctype', 'multipart/form-data');
                } else {
                    form.removeAttribute('enctype');
                }
            }
        </script>

        <script src="/js/editProduct.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script>