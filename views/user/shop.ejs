    <script>
        let sort = "";
        let filter = "";
        let search = "";
        let page = 1
        $('#filter-dropdown').on('click', 'a', function () {
            let filterBy = $(this).text();
            $('#filter-btn').text('Filter: ' + filterBy);
            var selectedValue = $(this).data('value');
            filter = selectedValue;
            console.log(filter);
            makeAjaxCall();
        });

        $('#sort-dropdown').on('click', 'a', function () {
            var sortBy = $(this).text();
            $('#sort-btn').text(sortBy);
            var selectedValue = $(this).data('value');
            sort = selectedValue; // Update 'sort' variable
            console.log(sort);
            makeAjaxCall();
        });

        // search 
        let timeoutId;
        function searchRequest() {

            clearTimeout(timeoutId);
            timeoutId = setTimeout(() => {
                search = searchInput.value
                makeAjaxCall();
            }, 500);
        }

        // pagination
        document.addEventListener("DOMContentLoaded", function () {
            // Get all pagination links
            const paginationLinks = document.querySelectorAll("#pagination .page-link");

            // Loop through each pagination link
            paginationLinks.forEach(function (link) {
                // Add click event listener to each link
                link.addEventListener("click", function (event) {
                    // Prevent the default link behavior
                    event.preventDefault();

                    // Remove the 'active' class from all pagination links' parent <li> elements
                    paginationLinks.forEach(function (link) {
                        link.parentNode.classList.remove("active");
                    });

                    // Add the 'active' class to the clicked link's parent <li> element
                    link.parentNode.classList.add("active");

                    // Get the page number from the clicked link's text content
                    if (link.textContent.trim() !== page) {
                        page = link.textContent.trim();
                        makeAjaxCall();
                        console.log("Clicked page:", page);
                    }

                    // Do whatever you need with the page number
                    // Store the page number in a variable, pass it to a function, etc.
                });
            });
        });



        // make fetch request
        function makeAjaxCall() {
            $.ajax({
                url: '/shop',
                method: 'POST',
                data: { sort: sort, filter: filter, search: search, page: page },
                success: function (response) {
                    document.getElementById('productsCount').innerHTML = response.productsCount;
                    // Clear the current product list
                    $('#product-list').empty();
                    // Iterate over the sorted products and append them to the product list
                    response.products.forEach(function (p) {
                        var productHtml = `
                    <div class="col-lg-3 col-md-4">
                        <div class="product-cart-wrap mb-30">
                            <div class="product-img-action-wrap">
                                <div class="product-img product-img-zoom">
                                    <a href="shop-product-right.html">
                                        <img class="default-img" src="/product-images/${p.image[0]}" alt="">
                                        <img class="hover-img" src="/product-images/${p.image[1]}" alt="">
                                    </a>
                                </div>
                                <div class="product-action-1">
                                    <a aria-label="Quick view" class="action-btn hover-up" data-bs-toggle="modal" data-bs-target="#quickViewModal">
                                        <i class="fi-rs-search"></i>
                                    </a>
                                    <a aria-label="Add To Wishlist" class="action-btn hover-up" href="shop-wishlist.html">
                                        <i class="fi-rs-heart"></i>
                                    </a>
                                    <a aria-label="Compare" class="action-btn hover-up" href="shop-compare.html">
                                        <i class="fi-rs-shuffle"></i>
                                    </a>
                                </div>
                                <div class="product-badges product-badges-position product-badges-mrg">
                                </div>
                            </div>
                            <div class="product-content-wrap">
                                <div class="product-category">
                                    
                                </div>
                                <h2 style="min-height: 4rem;">
                                    <a href="shop-product-right.html">
                                        ${p.name}(${p.color}, ${p.storage} GB)(${p.ram} RAM)
                                    </a>
                                </h2>
                                <div class="product-price">
                                    <span>&#8377;${p.promotionalPrice}</span>
                                    <span class="old-price">&#8377;${p.regularPrice}</span>
                                </div>
                                <div class="product-action-1 show">
                                    <a aria-label="Add To Cart" class="action-btn hover-up" href="shop-cart.html">
                                        <i class="fi-rs-shopping-bag-add"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                        $('#product-list').append(productHtml);
                    });

                }
            });
        }

    </script>
